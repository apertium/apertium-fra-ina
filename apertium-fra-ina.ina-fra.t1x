    <rule comment="RULE: conjugate numerals before nouns">
      <pattern>
        <pattern-item n="num"/>
        <pattern-item n="nom"/>
      </pattern>

      <action>
          <call-macro n="nouns_macro">
            <with-param pos="2"/>
          </call-macro>
       

            <choose>
              <when>
                <test>
                   <equal>
                      <clip pos="1" side="tl" part="lem"/>
                      <lit v="un"/>
                    </equal>
                </test>
                <out>
                            <chunk name="SN">
       <tags>
         <tag><lit-tag v="n"/></tag>
       </tags>     
                          <lu>
            <clip pos="1" side="tl" part="lem"/>
            <clip pos="1" side="tl" part="word_type"/>
            <clip pos="2" side="tl" part="gender"/>
            <clip pos="2" side="tl" part="nbr"/>
                    </lu>
            <b/>
            <lu>
            <clip pos="2" side="tl" part="lem"/>
            <clip pos="2" side="tl" part="word_type"/>
            <clip pos="2" side="tl" part="gender"/>
            <clip pos="2" side="tl" part="nbr"/>
                                </lu>
                    </chunk>
                </out>

              </when>
                <otherwise>

                <out>
            <chunk name="SN">
       <tags>
         <tag><lit-tag v="n"/></tag>
       </tags>     
       <lu>                   
            <clip pos="1" side="tl" part="lem"/>
            <clip pos="1" side="tl" part="word_type"/>
                  <lit-tag v="mf"/>
           <lit-tag v="sp"/>
</lu>
            <b/>
            <lu>
            <clip pos="2" side="tl" part="lem"/>
            <clip pos="2" side="tl" part="word_type"/>
            <clip pos="2" side="tl" part="gender"/>
            <clip pos="2" side="tl" part="nbr"/>
                </lu>
                    </chunk>
                </out>  

                </otherwise>
            </choose>
        </action>
<!--            -->

          


    </rule>
