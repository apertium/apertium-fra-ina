          <rule comment="RULE: conjugate determiners, nouns, verbs, adjectives">
          <pattern>
        <pattern-item n="det"/>
        <pattern-item n="nom"/>
        <pattern-item n="verb"/>
        <pattern-item n="adj"/>
      </pattern>

      <action>  


          <call-macro n="adj_agreement">
            <with-param pos="2"/>
            <with-param pos="4"/>
          </call-macro>
          <call-macro n="nouns_macro">
            <with-param pos="2"/>
          </call-macro>
        <out>
        <chunk name="det_nom_verb">
       <tags>
         <tag><lit-tag v="SN.SV"/></tag>
       </tags>
          <lu>
            <clip pos="1" side="tl" part="lem"/>
            <clip pos="1" side="tl" part="word_type"/>
            <clip pos="1" side="tl" part="defindef"/>
            <clip pos="2" side="tl" part="gender"/>
            <clip pos="2" side="tl" part="nbr"/>
          </lu>
          <b />
          <lu>
            <clip pos="2" side="tl" part="lem"/>
            <clip pos="2" side="tl" part="word_type"/>
            <clip pos="2" side="tl" part="gender"/>
            <clip pos="2" side="tl" part="nbr"/>
          </lu>
          <b />
          <lu>
            <clip pos="3" side="tl" part="lem"/>
            <clip pos="3" side="tl" part="word_type"/>
            <clip pos="3" side="tl" part="temps"/>
            <lit-tag v="p3"/>
            <clip pos="2" side="tl" part="nbr"/>
          </lu>
          <b />
          <lu>
            <clip pos="4" side="tl" part="lem"/>
            <clip pos="4" side="tl" part="word_type"/>
            <var n="adj_gender"/>
            <var n="adj_number"/>
          </lu>
            </chunk>
        </out>

              


      </action>
    </rule>

